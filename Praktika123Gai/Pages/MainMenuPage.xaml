<Page x:Class="Praktika123Gai.Pages.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Praktika123Gai.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenuPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Frame Name="frameToBasePages" Grid.Column="1"/>
        <StackPanel Orientation="Vertical" Background="White">
            <Image Source="/Images/Logo.jpg"  Height="100"/>
            <Button Margin="5,10,5,0" Background="#fecb00" Foreground="#302092">Автомобили</Button>
            <Button Click ="DriverClick" Margin="5,10,5,10" Background="#fecb00" Foreground="#302092">История владельцев</Button>
            <Button Click="EscapeClick" Margin="5,0,5,10" Background="#fecb00" Foreground="#302092">Выход</Button>


        </StackPanel>


    </Grid>
</Page>
